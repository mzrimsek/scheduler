@{ 
    ViewData["Title"] = "Home"; 
}

<a name="top"></a>
<div class="intro mdl-typography--text-center">
    <div class="logo-font intro-slogan">Break Free From Manual Meetings</div>
    <div class="logo-font intro-sub-slogan">You're busy. Let us do the hard work.</div>

    <a href="#screens">
        <button class="intro-fab mdl-button mdl-button--colored mdl-js-button mdl-button--fab mdl-js-ripple-effect">
            <i class="material-icons">expand_more</i>
        </button>
    </a>
</div>
<div class="intro-screen-section mdl-typography--text-center">
    <a name="screens"></a>
    <div class="mdl-typography--display-1-color-contrast">Scheduling Made Easy</div>
    <div class="intro-screens mdl-grid">
        <div class="mdl-cell mdl-cell--middle mdl-cell--4-col mdl-cell--8-col-tablet mdl-cell--4-col-phone invite-screen">
            <div class="mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">Invite People</h2>
                </div>
                <div class="mdl-card__supporting-text">Enter email addresses of your attendees.</div>
            </div>
        </div>
        <div class="mdl-cell mdl-cell--middle mdl-cell--4-col mdl-cell--8-col-tablet mdl-cell--4-col-phone time-screen">
            <div class="mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">Select a Time</h2>
                </div>
                <div class="mdl-card__supporting-text">Select the time and date for the meeting.</div>
            </div>
        </div>
        <div class="mdl-cell mdl-cell--middle mdl-cell--4-col mdl-cell--8-col-tablet mdl-cell--4-col-phone schedule-screen">
            <div class="mdl-card mdl-shadow--2dp">
                <div class="mdl-card__title mdl-card--expand">
                    <h2 class="mdl-card__title-text">Schedule Your Meeting</h2>
                </div>
                <div class="mdl-card__supporting-text">Meet with your attendees!</div>
            </div>
        </div>
    </div>
</div>