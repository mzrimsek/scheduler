@using Microsoft.AspNetCore.Http
@model scheduler.Models.SchedulerViewModels.EventViewModel

@{
    ViewData["Title"] = "Create New Event";
}
<h2>Create New Event</h2>

<form asp-controller="Scheduler" asp-action="CreateEvent" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    @Html.AntiForgeryToken()
    
    @{ await Html.RenderPartialAsync("_EventForm", Model); }

    <div class="button-container">
        <input class="btn btn-primary" type="submit" value="Schedule Meeting">
    </div>
</form>

