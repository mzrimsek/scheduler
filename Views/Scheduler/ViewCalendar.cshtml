@using System.Collections.Generic
@using Microsoft.AspNetCore.Identity
@using scheduler.Models
@using scheduler.Models.SchedulerViewModels

@inject UserManager<ApplicationUser> UserManager

@model List<CalendarEventViewModel>

@{
    ViewData["Title"] = "Your Calendar";
}

<div class="mdl-grid calendar-header">
    <div class="mdl-typography--display-2-color-contrast mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-phone header">@ViewData["Title"]</div>
    <a class="mdl-cell mdl-cell--4-offset-desktop mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-phone" asp-controller="Scheduler" asp-action="Index">
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent">Create a new event</button>
    </a>
</div>

<div class="calendar-event">
@foreach (var calendarEvent in Model)
{
    <div class="calendar-event panel panel-default">
        <div class="panel-heading calendar-event-header">
            <h2>@calendarEvent.EventTitle</h2>
            @if (calendarEvent.CreatedById == @UserManager.GetUserId(User))
            {
                <div class="action-buttons">
                    <a class="btn btn-primary btn-lg" asp-controller="Scheduler" asp-action="EditEvent" asp-route-eventId="@calendarEvent.EventId">Edit</a>
                    <a class="btn btn-danger btn-lg" asp-controller="Scheduler" asp-action="RemoveEvent" asp-route-eventId="@calendarEvent.EventId">Remove</a>
                </div>
            }
            else {
                <h3>By: @calendarEvent.CreatedByEmail</h3>  
            }
        </div>
        <div class="panel-body">
            <div class="container">
                <div class="row"> 
                    <div class="col-md-6">
                        <h3>About: @calendarEvent.EventDescription</h3>
                        <div class="event-times">
                            <div>Start: @calendarEvent.StartDateTime</div>
                            <div>End: @calendarEvent.EndDateTime</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="event-invitees">
                            <h3>Invitees</h3>
                            <ul>
                                @foreach (var email in calendarEvent.InviteeEmails)
                                {
                                    <li>@email</li>
                                }
                            </ul>
                            @if (calendarEvent.InviteeEmails.Count() == 0)
                            {
                                <div>No invitees!</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</div>
@if (Model.Count() == 0)
{
    <div>You don't seem to have any events to show!</div>
}