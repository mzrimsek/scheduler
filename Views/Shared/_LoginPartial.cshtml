@using Microsoft.AspNetCore.Identity
@using scheduler.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="logout-form">
        @Html.AntiForgeryToken()
        <a class="mdl-navigation__link" asp-area="" asp-controller="Manage" asp-action="Index">Hello @UserManager.GetUserName(User)!</a>
        <button type="submit" class="mdl-navigation__link">Log out</button>
    </form>
}
else
{
    <a class="mdl-navigation__link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    <a class="mdl-navigation__link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
}